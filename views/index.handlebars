<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="navbar-nav">
        <a class="nav-item nav-link" href="/">Home</a>
        <a class="nav-item nav-link" href="/savedArticles">Saved</a>
    </div>
</nav>

<div class="jumbotron text-center">
    <h1 class="display-4">Scraper</h1>
    <a class="btn btn-primary btn-lg" id="scrape" role="button">Scrape some articles!</a>
    <a class="btn btn-primary btn-lg" id="delete" role="button">Delete all articles.</a>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 articles text-center">
            {{#each articles}}
            <div class="card">
                <div class="card-body">
                    <a href={{this.link}}>
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <h6 class="card-text">{{this.category}}</h6>
                    <a href="#" class="btn btn-primary" id="save" value={{this._id}}>Save</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>